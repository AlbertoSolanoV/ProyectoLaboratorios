
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<html>
<head>
    <title>Perfil Usuario</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <script type="text/css" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/UserProfile.css" rel="stylesheet" />
</head>

<body>
    <div class="shadow-lg  p-3 mb-5 bg-body  rounded">

        <div class="container rounded  mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 border-right ">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <div class="card m-3" style="width: 18rem;">
                            <img id="fotoPerfil" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">Foto de perfil</h5>
                                <input type="button" class="btn btn-primary" value="Modificar" onclick=" AbrirCloudinary('fotoPerfil')" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Perfil Usuario</h4>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12" id="secNombreUsuario">
                                <label class="labels">Nombre</label>
                            </div>

                            <div class="col-md-12" id="secPrimerApeUsuario">
                                <label class="labels">Primer Apellido</label>
                            </div>

                            <div class="col-md-12"  id="secSegundoApeUsuario">
                                <label class="labels">Segundo Apellido </label>
                            </div>

                            <div class="col-md-12" id="secIdentificacionUsuario">
                                <label class="labels">Cédula</label>
                            </div>

                            <div class="col-md-12" id="secEmailUsuario" >
                                <label class="labels">Correo Electrónico</label>
                            </div>

                            <div class="col-md-12" id="secTelefonoUsuario">
                                <label class="labels">Número de Teléfono</label>
                            </div>

                            <div class="mb-3 mt-3" style="border-color:black">
                                <div class="form-check form-switch" id="secHabilitado">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="p-4 py-4 mt-3">
                        <img class="img_logo_perfil" src="~/Content/Imagenes/logo_dorado-s.png" />
                        <div class="row mt-2">
                            <div class="col-md-12"> <button type="submit" class="btn btn-primary profile-button" id="btnModificarDatos">Modificar Perfil</button></div>
                            <div class="col-md-12"> <button class="btn btn-primary profile-button" type="button">Eliminar Perfil</button></div>
                            <div class="col-md-12" id="secCambioContra">
                            </div>
                        </div>

                    </div>
                </div>
                <!-- Boton atras -->
                <div>
                    <br>
                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.8/dist/sweetalert2.all.min.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

    <script src="~/Scripts/JS/ModificarUsuario.js"></script>
    <script src="~/Scripts/JS/GuardarImg.js"></script>
</body>
</html>