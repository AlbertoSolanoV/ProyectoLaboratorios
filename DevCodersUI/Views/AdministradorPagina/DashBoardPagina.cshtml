
@{
    ViewBag.Title = "DashBoardPagina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>

<html class="bodyPage">
<head>
    <title>DashBoard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!--Siempre esto -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Fin del Siempre esto -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="img/favicon.ico" rel="icon">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" />

    <!-- CSS only -->
</head>
<body>

    <h2>Administrador de la página</h2>
    <div class="position-relative d-flex p-0 center-block">
        <div class="container shadow-lg p-3 mb-5 bg-body rounded">

            <!-- Para la parte de las ventas -->
            <div class="container-fluid pt-4 px-4">
                <div class="border border-dark rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Ganancias</h2>
                    </div>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
            <!-- Fin de la parte de ventas -->
            <!-- Para la primer tabla de Citas-->
            <div class="container-fluid pt-4 px-4">
                <div class="border border-dark rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Laboratorios subscritos</h2>
                    </div>
                    <div class="container">
                        <table class="table table-striped table-bordered table-sm" id="tbLabSubs" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Teléfono</th>
                                    <th>Correo Electrónico</th>
                                    <th>Página Web</th>
                                    <th>Administrador</th>
                                    <th>Estado</th>

                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>

            <!-- Fin de tabla citas-->
            <!-- Tabla usuarios-->
            <div class="container-fluid pt-4 px-4">
                <div class="border border-dark  rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Movimientos de usuarios</h2>
                    </div>
                    <div class="container">
                        <table class="table table-striped table-bordered table-sm" id="tbUsuarios" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th>Fecha realizado</th>
                                    <th>Rol</th>
                                    <th>Nombre Completo</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
            <!-- Fin tabla usuarios -->
            <!--Cambio de precio subscripcion-->
            <div class="container-fluid pt-4 px-4">
                <div class="border border-dark  rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Precio de subscripción</h2>
                    </div>
                    <div class="input-group mb-3 " id="seccionSub">
                        <span class="input-group-text w-25" id="basic-addon1">Precio actual de subscripción</span>

                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text  w-25" id="basic-addon1">Precio de la subscripción</span>
                        <input type="number" class="form-control" id="cantidadDescuento" min="0" step="0.1">
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary mb-3" id="btnCambiarPrecioSub">Cambiar precio</button>
                    </div>
                </div>

            </div>
            <!--Fin Cambio de precio subscripcion-->
            <!--Cambio de IVA-->
            <div class="container-fluid pt-4 px-4">
                <div class="border border-dark  rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h2 class="mb-0">Precio del IVA</h2>
                    </div>
                    <div class="input-group mb-3 " id="seccionIVA">
                        <span class="input-group-text w-25" id="basic-addon1">Precio actual del IVA</span>

                    </div>

                    <div class="input-group mb-3">
                        <span class="input-group-text  w-25" id="basic-addon1">Precio del IVA</span>
                        <input type="number" class="form-control" id="cantidadIVA" min="0" step="0.1">
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary mb-3" id="btnCambiarPrecioIVA">Cambiar precio</button>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.8/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/Scripts/JS/DashboardPag.js"></script>
</body>
</html>
