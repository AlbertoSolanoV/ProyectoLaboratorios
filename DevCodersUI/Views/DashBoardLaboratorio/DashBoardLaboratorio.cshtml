    <!-- Modal Seccion de descuentos-->
    <div class="modal fade" id="modalDescuento" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Crear descuento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="input-group mb-3">
                            <span class="input-group-text " id="basic-addon1">Nombre del descuento</span>
                            <input type="text" class="form-control" id="nombreDescu">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text  " id="basic-addon1">Cantidad del descuento</span>
                            <input type="number" class="form-control" id="cantidadDescuento" min="0" step="0.1">
