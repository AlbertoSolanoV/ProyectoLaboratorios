
@{
    ViewBag.Title = "ModificacionLab";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE HTML>

<html class="bodyPage">
<head>
    <title>DashBoard</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!--Siempre esto -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Fin del Siempre esto -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>


    <h2>Modificación Laboratorio</h2>

    <div class="container  shadow-lg p-3 mb-5 bg-body rounded">

        <div class="input-group mb-3 " id="secNombreLaboratorio">
            <span class="input-group-text w-25">Nombre del laboratorio</span>
        </div>

        <div class="input-group mb-3" id="secNombreComercial">
            <span class="input-group-text  w-25">Nombre comercial del laboratorio</span>
        </div>
        <div class="input-group mb-3" id="secCedulaJuridica">
            <span class="input-group-text  w-25" id="basic-addon1">Cédula jurídica</span>
        </div>
        <div class="input-group mb-3" id="secTelefono">
            <span class="input-group-text  w-25" id="basic-addon1">Télefono</span>
        </div>

        <div class="input-group mb-3" id="secCorreo">
            <span class="input-group-text  w-25" id="basic-addon1">Correo electrónico</span>
        </div>
        <div class="input-group  mb-3" id="secRazonSocial">
            <span class="input-group-text  w-25">Razón social</span>
        </div>

        <div class="input-group  mb-3" id="secDireccionLab">
            <span class="input-group-text  w-25">Dirección del laboratorio</span>
        </div>
        <div class="input-group mb-3" id="secCodigoPostal">
            <span class="input-group-text  w-25" id="basic-addon1">Código postal</span>
        </div>

        <div class="input-group mb-3" id="secPaginaWeb">
            <span class="input-group-text  w-25" id="basic-addon1">Página Web</span>
        </div>


        <div class="mb-3 mt-3" style="border-color:black">
            <div class="form-check form-switch" id="secHabilitado">

            </div>
        </div>


        <div class="row mb-3">
            <div class="card m-3" style="width: 18rem;">
                <img id="primerImg" class="card-img-top mt-2">
                <div class="card-body">
                    <h5 class="card-title">Imagen #1</h5>
                    <input type="button" class="btn btn-primary" value="Modificar" onclick=" AbrirCloudinary('primerImg')" />
                </div>
            </div>
            <div class="card m-3" style="width: 18rem;">
                <img id="segundaImg" class="card-img-top mt-2">
                <div class="card-body">
                    <h5 class="card-title">Imagen #2</h5>
                    <input type="button" class="btn btn-primary" value="Modificar" onclick=" AbrirCloudinary('segundaImg')" />
                </div>
            </div>
            <div class="card m-3" style="width: 18rem;">
                <img id="tercerImg" class="card-img-top mt-2" />
                <div class="card-body">
                    <h5 class="card-title">Imagen #3</h5>
                    <input type="button" class="btn btn-primary" value="Modificar" onclick=" AbrirCloudinary('tercerImg')" />
                </div>
            </div>
            <div class="card m-3" style="width: 18rem;">
                <img id="cuartaImg" class="card-img-top mt-2">
                <div class="card-body">
                    <h5 class="card-title">Imagen #4</h5>
                    <input type="button" class="btn btn-primary" value="Modificar" onclick=" AbrirCloudinary('cuartaImg')" />
                </div>
            </div>
            <div class="card m-3" style="width: 18rem;">
                <img id="quintaImg" class="card-img-top mt-2">
                <div class="card-body">
                    <h5 class="card-title">Imagen #5</h5>
                    <input type="button" class="btn btn-primary" value="Modificar" onclick=" AbrirCloudinary('quintaImg')" />
                </div>
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary mb-3" id="btnModificarDatos">Modificar</button>
        </div>

    </div>



    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.8/dist/sweetalert2.all.min.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

    <script src="~/Scripts/JS/ModificarLab.js"></script>
    <script src="~/Scripts/JS/GuardarImg.js"></script>
</body>
</html>
