@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

<html>
<head>
    <title>Registro de Usuario</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <script type="text/css" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/UserProfile.css" rel="stylesheet" />
    <link href="~/Content/Validaciones.css" rel="stylesheet" />
</head>
<body>

    <section class="h-100 h-custom gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div id="formulario">
                                            <div class="row mt-2">
                                                <h3>Formulario de registro</h3>
                                                <div class="col-md-6"><label class="labels">Nombre</label><input type="text" class="form-control nombre" placeholder="Nombre" value="" name="nombre" id="txtnombre"><span></span></div>
                                                <div class="col-md-6"><label class="labels">Primer Apellido</label><input type="text" class="form-control primer apellido" value="" placeholder="Primer Apellido" name="Primer Apellido" id="txtprimerApellido"><span></span></div>
                                                <div class="col-md-6"><label class="labels">Segundo Apellido</label><input type="text" class="form-control segundo apellido" value="" placeholder="Segundo Apellido" name="Segundo Apellido" id="txtsegundoApellido"><span></span></div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-12"><label class="labels">Identificación</label><input type="text" class="form-control identificacion" placeholder="Identificación" value="" name="identificacion" id="txtidentificacion"><span></span></div>
                                                <div class="col-md-12"><label class="labels">Correo Electrónico</label><input type="email" class="form-control email" placeholder="Correo Electrónico" value="" name="email" id="txtemail"> <span></span></div>
                                                <div class="col-md-12"><label class="labels">Número de Teléfono</label><input type="text" class="form-control telefono" placeholder="Número de Teléfono" value="" name="telefono" id="txttelefono"><span></span></div>
                                                <div class="col-md-12"><label class="labels">Contraseña</label><input type="password" class="form-control password" placeholder="Contraseña" value="" name="password" id="txtpassword"><span></span></div>

                                            </div>
                                            <!--Inicio Boton de envio de datos -->
                                            <div class="formulario__mensaje" id="formulario__mensaje">
                                                @*<p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Por favor rellene el formulario</p>*@
                                            </div>

                                            <div class="row mt-1 formulario__grupo formulario__grupo-btn-enviar">
                                                <button type="button" class=" col-md-3 m-lg-3 btn btn-primary profile-button formulario__btn text-center" id="btnRegistrar">Registrar</button>
                                                @*<a class=" col-md-3 m-lg-3 btn btn-primary profile-button formulario__btn text-center" href="~/OTP/OTP" type="submit" style="float:right">Registrar</a>*@
                                                @*<p class="formulario__mensaje-exito" id="formulario__mensaje-exito">Formulario Enviado</p>*@
                                                <!-- Boton atras --><a class="col-md-3 m-lg-3 btn btn-secondary" href="~/Login/Login" type="button" style="float:right">Atrás</a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div id="formulario Imagen">
                                        <div class="p-5 m-5">
                                            <!--Inicio subir imagen -->
                                            <div class="text-center card-img " style="width: 350px; height: 300px">
                                                <img id="perfilImg" class="card-img-top" src="~/Content/Imagenes/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                                                <div class="card-body">
                                                    <h5 class="card-title">Subir Imagen</h5>
                                                    <input type="button" class="btn btn-primary" value="Agregar foto de perfil" onclick=" AbrirCloudinary('perfilImg')" />
                                                </div>
                                            </div>
                                            <!--fin subir imagen -->
                                        </div>
                                    </div>
                                    
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Scripts/JS/ValidacionFormRegistro.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/JS/GuardarImg.js"></script>
    <script src="~/Scripts/JS/RegistroForm.js"></script>
</body>
</html>