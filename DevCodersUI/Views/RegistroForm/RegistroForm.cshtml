
@{
    ViewBag.Title = "RegistroForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE HTML>

<html class="bodyPage">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!--Siempre esto -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/css" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Validaciones.css" rel="stylesheet" />
    <!-- Fin del Siempre esto -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>


    <h2>Registro Perfil</h2>

    <div class="shadow-lg p-3 mb-5 bg-body rounded">

        <div class="row g-0">
            <div class="col-lg-8">
                <div class="p-4">
                    <div id="formulario">
                        <div class="row mt-2">
                            <h3 class="mb-4">Formulario de registro</h3>

                            <section>
                                <div class="input-group mb-3 ">
                                    <span class="input-group-text w-25" id="basic-addon1">Nombre</span>
                                    <input type="text" class="form-control" id="txtnombre">
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text  w-25" id="basic-addon1">Primer Apellido</span>
                                    <input type="text" class="form-control" id="txtprimerApellido">
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text  w-25" id="basic-addon1">Segundo Apellido</span>
                                    <input type="text" class="form-control" id="txtsegundoApellido">
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text  w-25" id="basic-addon1">Cédula</span>
                                    <input type="text" class="form-control" id="txtidentificacion">
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text  w-25" id="basic-addon1">Número de Télefono</span>
                                    <input type="number" class="form-control" id="txttelefono" name="txttelefono">
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text  w-25" id="basic-addon1">Correo electrónico</span>
                                    <input type="email" class="form-control" id="txtemail" name="txtemail">
                                </div>

                                <div class="input-group  mb-3">
                                    <span class="input-group-text  w-25">Contraseña</span>
                                    <input type="password" class="form-control" id="txtpassword" name="txtpassword">
                                </div>

                                <div class="input-group  mb-3">
                                    <span class="input-group-text  w-25">Confirmar contraseña</span>
                                    <input type="password" class="form-control" id="txtconfirmarpassword"  name="txtconfirmarpassword">
                                </div>

                            </section>

                        </div>
                        <!--Inicio Boton de envio de datos -->
                        <div class="formulario__mensaje" id="formulario__mensaje">
                        </div>

                        <div class="row mt-1 formulario__grupo formulario__grupo-btn-enviar">
                            <button type="submit" class=" col-md-3 m-lg-3 btn btn-primary profile-button formulario__btn text-center" id="btnRegistrar">Registrar</button>

                            <!-- Boton atras --><a class="col-md-3 m-lg-3 btn btn-secondary" href="~/Login/Login" type="button" style="float:right">Atrás</a>

                        </div>

                    </div>

                </div>

            </div>

            <!--Fin Boton de envio de datos -->

            <div class="col-lg-2">
                <div id="formulario Imagen">
                    <div class="p-2 m-2">
                        <!--Inicio subir imagen -->
                        <div class="text-center card-img  " style="width: 16rem; height: 22rem">
                            <img id="perfilImg" class="card-img-top " src="~/Content/Imagenes/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                            <div class="card-body">
                                <h5 class="card-title">Subir Imagen</h5>
                                <input type="button" class="btn btn-primary" value="Agregar foto de perfil" onclick=" AbrirCloudinary('perfilImg')" />
                            </div>
                        </div>
                        <!--fin subir imagen -->
                    </div>
                </div>

            </div>

        </div>

    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.8/dist/sweetalert2.all.min.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="~/Scripts/JS/GuardarImg.js"></script>
    <script src="~/Scripts/JS/RegistroForm.js"></script>
</body>
</html>
