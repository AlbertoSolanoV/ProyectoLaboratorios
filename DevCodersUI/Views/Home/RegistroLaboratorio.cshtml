
@{
    ViewBag.Title = "RegistroLaboratorio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE HTML>

<html class="bodyPage">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!--Siempre esto -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- Fin del Siempre esto -->

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>


    <h2>Registro laboratorio</h2>

    <div class="container  shadow-lg p-3 mb-5 bg-body rounded">
        <form>
            <div class="input-group mb-3 ">
                <span class="input-group-text w-25" id="basic-addon1">Nombre del laboratorio</span>
                <input type="text" class="form-control" id="nombreLab">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text  w-25" id="basic-addon1">Nombre comercial del laboratorio</span>
                <input type="text" class="form-control" id="nombreComercialLab">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text  w-25" id="basic-addon1">Cédula jurídica</span>
                <input type="text" class="form-control" id="cedulaJuridica">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text  w-25" id="basic-addon1">Número de télefono</span>
                <input type="number" class="form-control" id="telefonoLab">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text  w-25" id="basic-addon1">Correo electrónico</span>
                <input type="email" class="form-control" id="correo">
            </div>
            <div class="input-group  mb-3">
                <span class="input-group-text  w-25">Razón social</span>
                <textarea class="form-control" id="razonSocial"></textarea>
            </div>

            <div class="input-group  mb-3">
                <span class="input-group-text  w-25">Dirección del laboratorio</span>
                <textarea class="form-control" id="direccion"></textarea>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text  w-25" id="basic-addon1">Código postal</span>
                <input type="text" class="form-control" id="codigoPostal">
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text  w-25" id="basic-addon1">Página Web</span>
                <input type="text" class="form-control" id="paginaWeb">
            </div>
            <div class="row mb-3">
                <div class="card m-3" style="width: 18rem;">
                    <img id="primerImg" class="card-img-top mt-2" src="https://res.cloudinary.com/dvemi6ixg/image/upload/v1669318829/default-image_dgkkpt.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Imagen #1</h5>
                        <input type="button" class="btn btn-primary" value="Agregar" onclick="AbrirCloudinary('primerImg')" />
                    </div>
                </div>
                <div class="card m-3" style="width: 18rem;">
                    <img id="segImg" class="card-img-top mt-2" src="https://res.cloudinary.com/dvemi6ixg/image/upload/v1669318829/default-image_dgkkpt.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Imagen #2</h5>
                        <input type="button" class="btn btn-primary" value="Agregar" onclick="AbrirCloudinary('segImg')" />
                    </div>
                </div>
                <div class="card m-3" style="width: 18rem;">
                    <img id="terImg" class="card-img-top mt-2" src="https://res.cloudinary.com/dvemi6ixg/image/upload/v1669318829/default-image_dgkkpt.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Imagen #3</h5>
                        <input type="button" class="btn btn-primary" value="Agregar" onclick="AbrirCloudinary('terImg')" />
                    </div>
                </div>
                <div class="card m-3" style="width: 18rem;">
                    <img id="cuarImg" class="card-img-top mt-2" src="https://res.cloudinary.com/dvemi6ixg/image/upload/v1669318829/default-image_dgkkpt.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Imagen #4</h5>
                        <input type="button" class="btn btn-primary" value="Agregar" onclick="AbrirCloudinary('cuarImg')" />
                    </div>
                </div>
                <div class="card m-3" style="width: 18rem;">
                    <img id="quintaImg" class="card-img-top mt-2" src="https://res.cloudinary.com/dvemi6ixg/image/upload/v1669318829/default-image_dgkkpt.jpg">
                    <div class="card-body">
                        <h5 class="card-title">Imagen #5</h5>
                        <input type="button" class="btn btn-primary" value="Agregar" onclick="AbrirCloudinary('quintaImg')" />
                    </div>
                </div>
            </div>
            <div class="input-group mb-3" id="seccCostoSub" >
                <span class="input-group-text  w-25" id="basic-addon1">Total de pago de subscripción</span>
            </div>
            <div class="mb-3">
                <div id="paypal-button-container"  >

                </div>
                <div id="validarCampos">
                    <button type="button" class="btn btn-primary mb-3" id="btnRegistro">Validar datos</button>
                </div>
            </div>
        </form>
    </div>



    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.8/dist/sweetalert2.all.min.js"></script>
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

    <script src="https://www.paypal.com/sdk/js?client-id=AfwLGbYvQtwBpZJrxDNJUTcJjZWU42k16_DsHOsqv1jlhUiWoqs8vxW14FI3dHdcpC5RFcIwd6Lnnlcv&currency=USD"></script>
    
    <script src="~/Scripts/JS/RegistrarLab.js"></script>
    <script src="~/Scripts/JS/GuardarImg.js"></script>
</body>
</html>
